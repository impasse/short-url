<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8"/>
		<title>短链接</title>
		<link rel="stylesheet" href="css/app.css"/>
		<% if result %>
		<script>
		document.addEventListener('copy', function(e){
			e.clipboardData.setData('text/plain', document.querySelector("#result_url").innerText);
			alert("已复制到剪切板");
            e.preventDefault();
			});
		</script>
		<% end %>
	<body>
		<div class="container">
			<header>
				<h1><img src="img/logo.jpg" style="height:105px"/></h1>
    		</header>
    		<div class="content">
				<form method="POST">
	        		<div class="url_input">
    	       			<input type="text" name="url" id="url">
        	   		</div>
           			<div class="url_send">
           				<center>
		           			<input value="生成链接" class="btn-info" type="submit">
           				</center>
           			</div>
        		</form>
				<% if result %>
				<div id="success_result">
					<center>
        				<div class="result">
        					<a id="result_url" target="__blank" href="<%=result%>"><%=result%></a>
        				</div>
						<div>
							<button onclick="javascript:document.execCommand('copy')">复制到剪切板</button>
						</div>
					</center>
        		</div>
				<% end %>
    		</div>
		</div>
		<footer>
       		<center>
           		<p class="copyright"><a href="https://shyling.com">©2016 shyling</a></p>
       		</center>
    	</footer>
	</body>
</html>